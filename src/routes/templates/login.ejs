<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("partials/head") %>
        <title>Login | <%= site.name %></title>
    </head>
    <body>
        <div class="container container-y">
            <div><%= site.name %></div>
            <h1>Login</h1>
            <hr />
            <form
                id="login-form"
                action="<%= site.baseUrl %>login"
                method="post"
                onkeyup="handleFormKeyup(event)"
            >
                <input
                    class="block"
                    type="password"
                    placeholder="Enter passcode"
                    name="passcode"
                />
                <input type="submit" value="Login" />
            </form>
        </div>

        <script>
            function handleFormKeyup(e) {
                if (e.keyCode === 13) {
                    const form = document.getElementById("login-form");
                    form.submit();
                }
            }

            document.addEventListener("DOMContentLoaded", () => {
                const queries = new URLSearchParams(window.location.search);
                const redirectTo = queries.get("next");
                if (redirectTo) {
                    const loginForm = document.getElementById("login-form");
                    loginForm.action += `?next=${redirectTo}`;
                }
            });
        </script>
    </body>
</html>
